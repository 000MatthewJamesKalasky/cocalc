{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "sourceMap": true,
    "lib": ["es5", "es6", "es2017", "dom"],
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["app-framework"],
  "exclude": [
    "dist",
    "node_modules",
    "account/test",
    "jupyter/test",
    "frame-editors/generic/mocha-tests",
    "frame-editors/settings/__tests__",
    "jupyter/output-messages/__test__",
    "misc/__test__",
    "r_misc/__tests__",
    "test-mocha",
    "test",
    "*__tests__*",
    "*__test__*"
  ]
}
